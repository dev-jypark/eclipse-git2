<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">


<configuration>
	<!-- 클래스 별칭 설정 -->
	<typeAliases>
		<typeAlias type="com.kosmo.fridge.service.ShareDTO" alias="shareDTO"/>
		<typeAlias type="com.kosmo.fridge.service.TradeDTO" alias="tradeDTO"/>
		<typeAlias type="com.kosmo.fridge.service.IngrediantDTO" alias="ingrediantDTO"/>
		<typeAlias type="com.kosmo.fridge.service.ImageDTO" alias="imageDTO"/>		
	</typeAliases>	
	
	<!-- 매퍼파일(SQL쿼리 결과와 자바빈 매핑)의 위치정보 설정 -->
	<mappers>					
		<mapper resource="fridge/mybatis/mapper/share.xml" />	
		<mapper resource="fridge/mybatis/mapper/trade.xml" />	
	</mappers>
</configuration>