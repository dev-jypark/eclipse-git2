<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">


<configuration>
	<!-- 클래스 별칭 설정 -->
	<typeAliases>
		<typeAlias alias="exampleDTO" type="com.kosmo.fridge.service.ExampleDTO"/>
		<typeAlias alias="MemberProfileDTO" type="com.kosmo.fridge.service.MemberProfileDTO"/>
		<typeAlias alias="FeedDTO" type="com.kosmo.fridge.service.FeedDTO"/>
		<typeAlias alias="CommentDTO" type="com.kosmo.fridge.service.CommentDTO"/>
		
	</typeAliases>	
	
	<!-- 매퍼파일(SQL쿼리 결과와 자바빈 매핑)의 위치정보 설정 -->
	<mappers>		
		<mapper resource="fridge/mybatis/recipe.xml" />	
		<mapper resource="fridge/mybatis/mapper/example.xml" />	
		<mapper resource="fridge/mybatis/mapper/example.xml"/>
		<mapper resource="fridge/mybatis/mapper/community.xml"/>
		<mapper resource="fridge/mybatis/mapper/communityRestAPI.xml"/>
	</mappers>
</configuration>